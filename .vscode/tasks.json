{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Compile Arduino",
            "type": "shell",
            "command": "arduino-cli",
            "args": [
                "compile",
                "--fqbn",
                "arduino:avr:uno",
                "${workspaceFolder}/StopWatch/StopWatch.ino"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Upload Arduino",
            "type": "shell",
            "command": "arduino-cli",
            "args": [
                "upload",
                "-p",
                "/dev/ttyACM0",
                "--fqbn",
                "arduino:avr:uno",
                "${workspaceFolder}/StopWatch/StopWatch.ino"
            ],
            "group": {
                "kind": "build",
                "isDefault": false
            }
        }
    ]
}
